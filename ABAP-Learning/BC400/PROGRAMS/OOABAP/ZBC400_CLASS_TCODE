*             I_CALLBACK_HTML_TOP_OF_PAGE       = ' '
*             I_CALLBACK_HTML_END_OF_LIST       = ' '
             I_STRUCTURE_NAME                  = 'KNA1'
*             I_BACKGROUND_ID                   = ' '
             I_GRID_TITLE                      = 'CUSTOMER DETAILS'
*             I_GRID_SETTINGS                   =
