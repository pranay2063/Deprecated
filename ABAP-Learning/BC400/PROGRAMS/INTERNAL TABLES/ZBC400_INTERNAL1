*       IT_EMP-JOB = 'CLERK'.
*       IT_EMP-SALARY = '5000.00'.
*       APPEND  IT_EMP.
*
*       IT_EMP-EMPNO = 3.
*       IT_EMP-ENAME = 'MILLER'.
*       IT_EMP-JOB = 'SALESMAN'.
*       IT_EMP-SALARY = '3000.00'.
*       INSERT IT_EMP INDEX 2.
*
*       IT_EMP-EMPNO = 4.
*       IT_EMP-ENAME = 'JACK'.
*       IT_EMP-JOB = 'SALESMAN'.
*       IT_EMP-SALARY = '3000.00'.
*       INSERT  IT_EMP INDEX 1.
